body {
  margin: 0px;
  font-family: "Dosis", sans-serif;
  background-image: url(<%= asset_path ['wood1.jpg', 'wood2.jpg', 'wood4.jpg', 'dark-wood.jpg'].sample %>);
  background-position: center;
  background-repeat: no-repeat;
}

p {
  margin: 14px auto;
}

a {
  text-decoration: none;
  color: inherit;
}

.menu {
  border-radius: 5px;
  box-shadow: 15px 15px 60px 19px rgba(0,0,0,0.58);
  margin: 40px auto 0;
  padding: 50px 40px;
  background-image: image-url('paper-texture-2.jpg');
  background-position: center;
  text-align: center;
  width: 350px;
  height: 470px;
}

#bar-name {
  text-transform: uppercase;
}

.title p {
  font-size: 30px;
  margin: 0px;
  padding-bottom: 8px;
}

.link-box {
  display: inline-block;
  border: 2px solid #D6C9B2;
  padding: 5px;
}

.links {
  height: 420px;
  overflow: auto;
}

#menu-items { font-size: 16px; }
